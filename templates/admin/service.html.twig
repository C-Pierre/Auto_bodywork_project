{% extends '/admin/layout.html.twig' %}

{% block main %}
	<div class="body-pack body-pack--admin">
		<div class="container-pack container-pack--admin">
			{% for service in services %}
				<div class="card-pack">
					<div class="card-pack-top">
						<p>{{ service.name }}</p>
					</div>
					<div class="card-pack-body card-pack-body--admin">
						<p>{{ service.description }}</p>
						<form method="post" action="{{ path('admin_service_delete', {'id': service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
							<button class="msg-btn">Supprimer</button>
						</form>
						<a href="{{ path('admin_service_edit', {'id': service.id}) }}" class="msg-btn">Modifier</a>
					</div>
				</div>
			{% endfor %}
			<div class="card-pack">
				<div class="card-pack-top">
					<p>Cr√©er des prestations</p>
				</div>
				<div class="card-pack-body card-pack-body--admin">
					<a href="{{ path('admin_service_new') }}" class="msg-btn">Nouveau</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
