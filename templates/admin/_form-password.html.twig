<div class="password-form">
	{{ form_start(form) }}
	<div class="c-infos-group">
		{{ form_label(form.password.first, 'Nouveau mot de passe', {'label_attr': {'class': 'login-label'}}) }}
		{{ form_errors(form.password.first) }}
		{{ form_widget(form.password.first, {'attr': {'class': 'login-input'}}) }}
	</div>
	<div class="c-infos-group">
		{{ form_label(form.password.second, 'Répétez le mot de passe', {'label_attr': {'class': 'login-label'}}) }}
		{{ form_errors(form.password.second) }}
		{{ form_widget(form.password.second, {'attr': {'class': 'login-input'}}) }}
	</div>
	<div class="connexion-form-group">
		<input type="submit" class="msg-btn msg-btn--admin" value="Envoyer"/>
	</div>
	{{ form_end(form) }}
</div>
